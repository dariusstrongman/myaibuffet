<?xml version="1.0" encoding="UTF-8"?>
<svg width="1200" height="630" viewBox="0 0 1200 630" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bgGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#030712;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#0f1419;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#1a1f2e;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="logoGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#8B5CF6;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#3B82F6;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#22D3EE;stop-opacity:1" />
    </linearGradient>
  </defs>

  <!-- Background -->
  <rect width="1200" height="630" fill="url(#bgGrad)"/>

  <!-- Decorative elements -->
  <circle cx="1050" cy="150" r="80" fill="url(#logoGrad)" opacity="0.1"/>
  <circle cx="150" cy="480" r="60" fill="#22D3EE" opacity="0.05"/>

  <!-- Brand logo area -->
  <g transform="translate(80, 80)">
    <!-- AI Symbol -->
    <circle cx="60" cy="60" r="50" fill="url(#logoGrad)" opacity="0.8"/>
    <g transform="translate(25, 25)" fill="white" opacity="0.9">
      <!-- Central node -->
      <circle cx="35" cy="35" r="8"/>
      <!-- Connected nodes -->
      <circle cx="15" cy="15" r="5"/>
      <circle cx="55" cy="15" r="5"/>
      <circle cx="20" cy="55" r="5"/>
      <circle cx="50" cy="55" r="5"/>
      <!-- Connection lines -->
      <line x1="15" y1="15" x2="27" y2="27" stroke="white" stroke-width="2" opacity="0.7"/>
      <line x1="55" y1="15" x2="43" y2="27" stroke="white" stroke-width="2" opacity="0.7"/>
      <line x1="20" y1="55" x2="30" y2="43" stroke="white" stroke-width="2" opacity="0.7"/>
      <line x1="50" y1="55" x2="42" y2="43" stroke="white" stroke-width="2" opacity="0.7"/>
    </g>

    <!-- Brand text -->
    <text x="140" y="45" font-family="Inter, Arial, sans-serif" font-size="32" font-weight="bold" fill="#22D3EE">AI Buffet</text>
    <text x="140" y="75" font-family="Inter, Arial, sans-serif" font-size="16" fill="#94A3B8">Premium AI Tools & News</text>
  </g>

  <!-- Main title -->
  <text x="80" y="280" font-family="DM Serif Display, serif" font-size="48" font-weight="400" fill="#F8FAFC" text-anchor="start">
    <tspan x="80" dy="0">Best AI Tools 2025</tspan>
  </text>

  <!-- Description -->
  <text x="80" y="350" font-family="Inter, Arial, sans-serif" font-size="24" fill="#CBD5E1" text-anchor="start">
    <tspan x="80" dy="0">Premium AI News, Reviews & Insights</tspan>
  </text>

  <!-- Website URL -->
  <text x="80" y="550" font-family="Inter, Arial, sans-serif" font-size="20" fill="#22D3EE">myaibuffet.com</text>

  <!-- Decorative AI pattern -->
  <g transform="translate(800, 300)" opacity="0.1">
    <path d="M0,0 L100,0 L100,50 L0,50 Z" fill="#22D3EE"/>
    <path d="M20,15 L80,15 L80,35 L20,35 Z" fill="#8B5CF6"/>
    <circle cx="50" cy="25" r="8" fill="white"/>
  </g>
